<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_send_form" model="ir.ui.view">
        <field name="name">account.move.send.form.inherit.l10n_ke_etims_vscu</field>
        <field name="model">account.move.send.wizard</field>
        <field name="inherit_id" ref="account.account_move_send_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='extra_edis']" position="inside">
                <div invisible="not l10n_ke_show_checkbox_vscu">
                    <field name="l10n_ke_show_checkbox_vscu" invisible="1"/>
                    <field name="l10n_ke_checkbox_vscu" 
                           widget="boolean_toggle"
                           class="d-inline"
                           help="Send this invoice to KRA eTIMS system"/>
                    <label for="l10n_ke_checkbox_vscu" 
                           string="Send to eTIMS"
                           class="d-inline ms-2"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>