<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="l10n_ke_etims_code_view_tree" model="ir.ui.view">
            <field name="name">l10n.ke.edi.vscu.code.tree</field>
            <field name="model">l10n_ke_etims_vscu.code</field>
            <field name="arch" type="xml">
                <list string="eTIMS Code" create="0" delete="0">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="code_type"/>
                    <field name="description"/>
                </list>
            </field>
        </record>
        <record id="l10n_ke_etims_code_search" model="ir.ui.view">
            <field name="name">l10n.ke.edi.vscu.code.search</field>
            <field name="model">l10n_ke_etims_vscu.code</field>
            <field name="arch" type="xml">
                <search string="">
                    <filter string="Name" name="name" domain="[('name', 'ilike', self._context.get('search_default_name', ''))]"/>
                    <filter string="Code" name="code" domain="[('code', 'ilike', self._context.get('search_default_code', ''))]"/>
                    <filter string="Description" name="description" domain="[('description', 'ilike', self._context.get('search_default_description', ''))]"/>
                    <separator orientation="vertical"/>
                    <filter string="Code Type" name="code_type" context="{'group_by':'code_type'}"/>
                </search>
            </field>
        </record>
        <record id="l10n_ke_etims_code_action" model="ir.actions.act_window">
            <field name="name">eTIMS Codes</field>
            <field name="res_model">l10n_ke_etims_vscu.code</field>
            <field name="view_id" ref="l10n_ke_etims_code_view_tree"/>
        </record>

    </data>
</odoo>
